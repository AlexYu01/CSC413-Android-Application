<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            >

            <ImageView
                android:id="@+id/story_image_small"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignBottom="@+id/list_item_story_desc"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:contentDescription="@string/image_of_the_story"
                android:src="@drawable/small_mail"/>

            <TextView
                android:id="@+id/list_item_story_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/story_image_small"
                android:layout_toStartOf="@id/story_image_small"
                android:paddingTop="24dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Card #"/>

            <TextView
                android:id="@+id/list_item_story_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_item_story_card_number"
                android:layout_toLeftOf="@id/story_image_small"
                android:layout_toStartOf="@id/story_image_small"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/name"
                android:textSize="14sp"
                tools:text="Name"/>

            <TextView
                android:id="@+id/list_item_story_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_item_story_name"
                android:layout_toLeftOf="@id/story_image_small"
                android:layout_toStartOf="@id/story_image_small"
                android:maxLines="3"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:text="@string/description"
                android:textSize="14sp"
                tools:text="Description"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>